@using EEWF.Domain.DTOs.Teacher;
@model List<TeacherDto>
@{
    ViewData["Title"] = "Index";
}

<div id="fh5co-staff">
	<div class="container">
		<div class="row">
			@foreach(TeacherDto teacher in Model)
			{
			<div class="col-md-3 text-center">
				<div class="staff">
						<div class="staff-img" style="background-image: url(../uploads/teacher/@teacher.Image);">
					</div>
					<span>@teacher.category</span>
					<h3><a>@teacher.Name @teacher.Surname</a></h3>
					<p>@teacher.Description</p>
				</div>
			</div>
			}
		</div>
	</div>
</div>