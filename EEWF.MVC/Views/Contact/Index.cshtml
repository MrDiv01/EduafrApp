@using EEWF.Domain.DTOs.Appeal
@using EEWF.MVC.ViewModels
@model AppealDto

@{
    ViewData["Title"] = "Index";
}

<!-- Contact Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h5 class="text-primary text-uppercase mb-3" style="letter-spacing: 5px;">Contact</h5>
            <h1>Contact For Any Query</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="contact-form bg-secondary rounded p-5">
                    <div id="success"></div>
                    <form asp-action="Index" method="post" name="sentMessage" id="contactForm" novalidate="novalidate">
                        <div class="control-group">
                            <input asp-for="Name" class="form-control border-0 p-4" placeholder="Your Name" required="required" data-validation-required-message="Please enter your name" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input asp-for="Surname" class="form-control border-0 p-4" placeholder="Your SurName" required="required" data-validation-required-message="Please enter your surname" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input asp-for="Email" type="email" class="form-control border-0 p-4" placeholder="Your Email" required="required" data-validation-required-message="Please enter your email" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input asp-for="Subject" class="form-control border-0 p-4" placeholder="Subject" required="required" data-validation-required-message="Please enter a subject" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <textarea asp-for="Message" class="form-control border-0 py-3 px-4" rows="5" placeholder="Message" required="required" data-validation-required-message="Please enter your message"></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary py-3 px-5" id="sendMessageButton">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
