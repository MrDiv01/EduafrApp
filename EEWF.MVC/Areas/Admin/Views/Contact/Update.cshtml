@using EEWF.Domain.DTOs.Contact;

@{
    ViewData["Title"] = "Update";
}

@section Css {
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
}

@model ContactDto

<div class="d-flex justify-content-center align-items-center" style="width: 100%;">
    <form asp-action="Update" asp-controller="Contact" style="width: 60%;">
        <h4>Location</h4>
        <input type="text" name="Location" asp-for="Location" class="form-control mb-3" placeholder="Brand name">
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Location)</span>
        
        <h4>Phone number</h4>
        <input type="text" name="Phone" asp-for="Phone" class="form-control mb-3" placeholder="Brand name">
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Phone)</span>

        <h4>E-mail address</h4>
        <input type="text" name="Mail" asp-for="Mail" class="form-control mb-3" placeholder="Brand name">
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Mail)</span>

        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="d-flex align-items-center" style=" background-color: green; padding: 10px 15px; color: white; border: 1px solid white; border-radius: 5px; font-weight: 600;"><i class='bx bx-save' style="margin-right: 7px;"></i>Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <!--  BEGIN CUSTOM SCRIPTS FILE  -->
    <script src="~/admin/assets/js/scrollspyNav.js"></script>
    <script src="~/admin/plugins/select2/select2.min.js"></script>
    <script src="~/admin/plugins/select2/custom-select2.js"></script>
    <!--  BEGIN CUSTOM SCRIPTS FILE  -->
    <script>
        var ss = $(".basic").select2({
            tags: true,
        });
    </script>
        }