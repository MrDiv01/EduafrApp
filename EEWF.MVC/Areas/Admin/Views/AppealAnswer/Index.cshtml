@using EEWF.MVC.Areas.Admin.ViewModels;

@{
    ViewData["Title"] = "Index";
}

@model AppealViewModel

@section Css {
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        textarea::placeholder {
            text-align: center;
            font-size: 20px;
        }
    </style>
}

<div class="container" style="height: 100%; margin-top: 200px; display: flex; flex-direction: column; align-items: center;">
    <div style="display: flex; align-items: center;  margin-bottom: 30px;">
        <span style="color: #000; font-size: 20px;">@Model.Appeal.Name @Model.Appeal.Surname</span>
        <small style="margin-left: 10px;">(@Model.Appeal.Email)</small>
    </div>

    <div>
        <h4>@Model.Appeal.Subject</h4>
    </div>

    <div style="text-align: center;">
        <p>@Model.Appeal.Message</p>
    </div>
</div>

<div class="d-flex container" style="width: 100%; margin-top: -150px; display: flex; flex-direction: column; align-items: center;">
    
    <form asp-action="Index" asp-controller="AppealAnswer" style="display: flex; flex-direction: column; align-items: center;" method="post" style="width: 60%;">
        
        @if(Model.Appeal.IsAnswer == false)
        {
            
        <textarea asp-for="@Model.AppealAnswer.Answer" rows="4" cols="60"  placeholder="Answer" style="border-radius: 10px; border: 2px solid black;"></textarea>
            <span style="color: red;">@Html.ValidationMessageFor(x => x.AppealAnswer.Answer)</span>

            <div class="d-flex justify-content-end mt-3">
                <button type="submit" class="d-flex align-items-center" style="background-color: blue; padding: 10px 15px; color: white; border: 1px solid white; border-radius: 5px; font-weight: 600; font-size: 18px;"><i class='bx bx-mail-send bx-tada' style="margin-right: 7px;"></i>Send</button>
            </div>
        }

        else
        {
            <h4>Answer</h4>
            <p>@Model?.AppealAnswer?.Answer</p>
        }


        
    </form>
</div>

@section Scripts {
    <!--  BEGIN CUSTOM SCRIPTS FILE  -->
    <script src="~/admin/assets/js/scrollspyNav.js"></script>
    <script src="~/admin/plugins/select2/select2.min.js"></script>
    <script src="~/admin/plugins/select2/custom-select2.js"></script>
    <!--  BEGIN CUSTOM SCRIPTS FILE  -->
    <script>
        var ss = $(".basic").select2({
            tags: true,
        });
    </script>
        }