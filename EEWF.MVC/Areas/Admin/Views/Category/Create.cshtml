@using EEWF.Domain.DTOs.Category;

@{
    ViewData["Title"] = "Create";
}

@section Css {
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
}

@model CategoryDto

<div class="d-flex justify-content-center align-items-center" style="width: 100%;">
    <form asp-action="Create" asp-controller="Category" style="width: 60%;">
        <h4>Category name</h4>
        <input type="text" name="Name" asp-for="Name" class="form-control mb-3" placeholder="Category name">
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Name)</span>

        <h4>Category icon</h4>
        <input type="text" name="Icon" asp-for="Icon" class="form-control mb-3" placeholder="Category icon">
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Icon)</span>

        <h4>Category description</h4>
        <input type="text" name="Description" asp-for="Description" class="form-control mb-3" placeholder="Category description">
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Description)</span>

        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="d-flex align-items-center" style=" background-color: green; padding: 10px 15px; color: white; border: 1px solid white; border-radius: 5px; font-weight: 600;"><i class='bx bx-save' style="margin-right: 7px;"></i>Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <!--  BEGIN CUSTOM SCRIPTS FILE  -->
    <script src="~/admin/assets/js/scrollspyNav.js"></script>
    <script src="~/admin/plugins/select2/select2.min.js"></script>
    <script src="~/admin/plugins/select2/custom-select2.js"></script>
    <!--  BEGIN CUSTOM SCRIPTS FILE  -->
    <script>
        var ss = $(".basic").select2({
            tags: true,
        });
    </script>
        }