@using EEWF.Domain.DTOs.Carousel;

@{
    ViewData["Title"] = "Update";
}

@section Css {
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
}

@model CarouselDto

<div class="d-flex justify-content-center align-items-center" style="width: 100%;">
    <form asp-action="Update" asp-controller="Carousel" style="width: 60%;" enctype="multipart/form-data">
        <h4>Carousel title</h4>
        <input type="text" name="Title" asp-for="Title" class="form-control mb-3" placeholder="Carousel title">
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Title)</span>
        <h4>Carousel description</h4>
        <textarea type="text" name="Description" asp-for="Description" class="form-control mb-3" placeholder="Carousel description"></textarea>
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Description)</span>
        <h4>Carousel url</h4>
        <textarea type="text" name="Url" asp-for="Url" class="form-control mb-3" placeholder="URL"></textarea>
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Url)</span>
        <h4>Carousel button text</h4>
        <textarea type="text" name="ButtonText" asp-for="ButtonText" class="form-control mb-3" placeholder="Button text"></textarea>
        <span style="color: red;">@Html.ValidationMessageFor(x => x.ButtonText)</span>
        <h4>Carousel image</h4>
        <img src="~/uploads/carousel/@Model.Image" width="200" height="200" style="margin-bottom: 15px; border-radius: 10px;" />
        <input class="form-control" name="ImageFile" asp-for="ImageFile" placeholder="Şəkil">

        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="d-flex align-items-center" style=" background-color: green; padding: 10px 15px; color: white; border: 1px solid white; border-radius: 5px; font-weight: 600;"><i class='bx bx-save' style="margin-right: 7px;"></i>Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <!--  BEGIN CUSTOM SCRIPTS FILE  -->
    <script src="~/admin/assets/js/scrollspyNav.js"></script>
    <script src="~/admin/plugins/select2/select2.min.js"></script>
    <script src="~/admin/plugins/select2/custom-select2.js"></script>
    <!--  BEGIN CUSTOM SCRIPTS FILE  -->
    <script>
        var ss = $(".basic").select2({
            tags: true,
        });
    </script>
        }